      }

      .sticker {
        position: absolute;
        width: 80px;
        pointer-events: none;
        opacity: 0.8;
        animation: float 8s ease-in-out infinite;
      }

      @keyframes float {
        0% {
          transform: translateY(0px) rotate(0deg);
        }
        50% {
          transform: translateY(-12px) rotate(3deg);
        }
        100% {
          transform: translateY(0px) rotate(0deg);
        }
      }

      .button {
        width: 100px;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        color: white;
        background-color: #e29cd8;
        cursor: pointer;
        text-decoration: none;
        border: none;
        border-radius: 8px;
      }

      main {
        position: absolute;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        text-align: center;
        text-shadow: 1px 1px 4px black;
        z-index: 10;
      }

      h1 {
        margin: 0;
        font-size: 1.5rem;
      }

      p {
        margin: 0.3rem 0 0;
        font-size: 1rem;
      }

      .container {
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        justify-content: center;
        align-items: center;
        font-size: 12vw;
        font-weight: bold;
        color: white;
        font-family: -apple-system, BlinkMacSystemFont, sans-serif;
        z-index: 100;
      }

      .letter {
        opacity: 0;
        transform: scale(0.8);
        animation: pop 0.5s forwards;
        color: rgb(239, 0, 244);
      }

      .buttons {
        margin-top: 200px;
        display: flex;
        flex-direction: row;
        gap: 1rem;
      }

      @keyframes pop {
        to {
          opacity: 1;
          transform: scale(1);
        }
      }

